# LLM-CostOps Staging Environment Configuration
# Project: agentics-dev
# Environment: staging

# =============================================================================
# SERVICE IDENTITY
# =============================================================================
SERVICE_NAME=llm-costops
SERVICE_VERSION=staging
PLATFORM_ENV=staging

# =============================================================================
# RUVECTOR SERVICE (Persistence Layer)
# =============================================================================
RUVECTOR_SERVICE_URL=https://ruvector-service-staging.agentics.internal
RUVECTOR_TIMEOUT_SECS=10
RUVECTOR_MAX_RETRIES=3
RUVECTOR_RETRY_DELAY_MS=500

# =============================================================================
# TELEMETRY (LLM-Observatory)
# =============================================================================
TELEMETRY_ENDPOINT=https://llm-observatory-staging.agentics.internal/v1/ingest
TELEMETRY_ENABLED=true
TELEMETRY_BATCH_SIZE=100
TELEMETRY_FLUSH_INTERVAL_MS=3000

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=8080
METRICS_PORT=9090
REQUEST_TIMEOUT_SECS=30
MAX_CONCURRENT_REQUESTS=200

# =============================================================================
# LOGGING
# =============================================================================
RUST_LOG=info,llm_cost_ops=info
LOG_FORMAT=json
LOG_LEVEL=info

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================
BUDGET_AGENT_MIN_DATA_COMPLETENESS=0.9
BUDGET_AGENT_FORECAST_ENABLED=true
BUDGET_AGENT_MIN_FORECAST_POINTS=7

FORECAST_AGENT_MAX_HORIZON_DAYS=365
FORECAST_AGENT_MIN_CONFIDENCE=0.8
FORECAST_AGENT_DEFAULT_MODEL=auto

# =============================================================================
# INTEGRATION ENDPOINTS
# =============================================================================
LLM_OBSERVATORY_URL=https://llm-observatory-staging.agentics.internal
LLM_LATENCY_LENS_URL=https://llm-latency-lens-staging.agentics.internal

# =============================================================================
# SECURITY
# =============================================================================
INGRESS_MODE=internal
REQUIRE_AUTH=true
