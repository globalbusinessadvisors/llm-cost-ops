# LLM-CostOps Production Environment Configuration
# Project: agentics-dev
# Environment: prod

# =============================================================================
# SERVICE IDENTITY
# =============================================================================
SERVICE_NAME=llm-costops
# SERVICE_VERSION is set at deploy time from git tag
PLATFORM_ENV=prod

# =============================================================================
# RUVECTOR SERVICE (Persistence Layer)
# =============================================================================
RUVECTOR_SERVICE_URL=https://ruvector-service.agentics.internal
RUVECTOR_TIMEOUT_SECS=10
RUVECTOR_MAX_RETRIES=5
RUVECTOR_RETRY_DELAY_MS=500

# =============================================================================
# TELEMETRY (LLM-Observatory)
# =============================================================================
TELEMETRY_ENDPOINT=https://llm-observatory.agentics.internal/v1/ingest
TELEMETRY_ENABLED=true
TELEMETRY_BATCH_SIZE=100
TELEMETRY_FLUSH_INTERVAL_MS=1000

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=8080
METRICS_PORT=9090
REQUEST_TIMEOUT_SECS=30
MAX_CONCURRENT_REQUESTS=500

# =============================================================================
# LOGGING
# =============================================================================
RUST_LOG=info
LOG_FORMAT=json
LOG_LEVEL=info

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================
BUDGET_AGENT_MIN_DATA_COMPLETENESS=0.95
BUDGET_AGENT_FORECAST_ENABLED=true
BUDGET_AGENT_MIN_FORECAST_POINTS=14

FORECAST_AGENT_MAX_HORIZON_DAYS=365
FORECAST_AGENT_MIN_CONFIDENCE=0.9
FORECAST_AGENT_DEFAULT_MODEL=auto

# =============================================================================
# INTEGRATION ENDPOINTS
# =============================================================================
LLM_OBSERVATORY_URL=https://llm-observatory.agentics.internal
LLM_LATENCY_LENS_URL=https://llm-latency-lens.agentics.internal

# =============================================================================
# SECURITY
# =============================================================================
INGRESS_MODE=internal
REQUIRE_AUTH=true
