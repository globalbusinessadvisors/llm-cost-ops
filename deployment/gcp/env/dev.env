# LLM-CostOps Development Environment Configuration
# Project: agentics-dev
# Environment: dev

# =============================================================================
# SERVICE IDENTITY
# =============================================================================
SERVICE_NAME=llm-costops
SERVICE_VERSION=dev
PLATFORM_ENV=dev

# =============================================================================
# RUVECTOR SERVICE (Persistence Layer)
# ALL persistence MUST go through ruvector-service
# NO direct SQL connections allowed per Constitution
# =============================================================================
RUVECTOR_SERVICE_URL=https://ruvector-service-dev.agentics.internal
# RUVECTOR_API_KEY is injected via Secret Manager (DO NOT hardcode)
RUVECTOR_TIMEOUT_SECS=10
RUVECTOR_MAX_RETRIES=3
RUVECTOR_RETRY_DELAY_MS=1000

# =============================================================================
# TELEMETRY (LLM-Observatory)
# =============================================================================
TELEMETRY_ENDPOINT=https://llm-observatory-dev.agentics.internal/v1/ingest
# TELEMETRY_API_KEY is injected via Secret Manager (DO NOT hardcode)
TELEMETRY_ENABLED=true
TELEMETRY_BATCH_SIZE=100
TELEMETRY_FLUSH_INTERVAL_MS=5000

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=8080
METRICS_PORT=9090
REQUEST_TIMEOUT_SECS=30
MAX_CONCURRENT_REQUESTS=100

# =============================================================================
# LOGGING
# =============================================================================
RUST_LOG=info,llm_cost_ops=debug
LOG_FORMAT=json
LOG_LEVEL=debug

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================
# Budget Enforcement Agent
BUDGET_AGENT_MIN_DATA_COMPLETENESS=0.8
BUDGET_AGENT_FORECAST_ENABLED=true
BUDGET_AGENT_MIN_FORECAST_POINTS=7

# Cost Forecasting Agent
FORECAST_AGENT_MAX_HORIZON_DAYS=365
FORECAST_AGENT_MIN_CONFIDENCE=0.7
FORECAST_AGENT_DEFAULT_MODEL=auto

# =============================================================================
# INTEGRATION ENDPOINTS (Read-only consumers)
# =============================================================================
# LLM-Observatory (provides telemetry inputs)
LLM_OBSERVATORY_URL=https://llm-observatory-dev.agentics.internal

# LLM-Latency-Lens (provides performance inputs)
LLM_LATENCY_LENS_URL=https://llm-latency-lens-dev.agentics.internal

# =============================================================================
# SECURITY
# =============================================================================
# Internal-only ingress (no public access)
INGRESS_MODE=internal
# Require IAM authentication
REQUIRE_AUTH=true
