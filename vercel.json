{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "llm-cost-ops-docs",
  "buildCommand": "cd website && npm ci && npm run build",
  "outputDirectory": "website/build",
  "devCommand": "cd website && npm run start -- --port $PORT",
  "installCommand": "cd website && npm ci",
  "framework": "docusaurus",
  "public": false,
  "github": {
    "enabled": true,
    "autoAlias": true,
    "silent": false,
    "autoJobCancelation": true
  },
  "build": {
    "env": {
      "NODE_VERSION": "20",
      "NPM_CONFIG_LEGACY_PEER_DEPS": "true"
    }
  },
  "env": {
    "NODE_ENV": "production",
    "DOCUSAURUS_CONFIG": "production"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "geolocation=(), microphone=(), camera=()"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)\\.(?:js|css)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/img/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/(.*)\\.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/docs",
      "destination": "/docs/intro",
      "permanent": true
    },
    {
      "source": "/api",
      "destination": "/docs/api/overview",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "trailingSlash": false,
  "cleanUrls": true,
  "regions": ["iad1"],
  "functions": {
    "website/api/**/*.js": {
      "runtime": "nodejs20.x",
      "maxDuration": 10
    }
  }
}
