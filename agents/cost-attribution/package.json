{
  "name": "@cost-ops/cost-attribution-agent",
  "version": "1.0.0",
  "description": "Cost Attribution Agent - Google Cloud Edge Function and CLI for LLM cost analysis and attribution",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "cost-attribution": "./bin/cost-attribution.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "dev": "ts-node src/cli/index.ts",
    "deploy": "gcloud functions deploy cost-attribution-handler --gen2 --runtime=nodejs20 --region=us-central1 --source=. --entry-point=costAttributionHandler --trigger-http --allow-unauthenticated",
    "deploy:prod": "gcloud functions deploy cost-attribution-handler --gen2 --runtime=nodejs20 --region=us-central1 --source=. --entry-point=costAttributionHandler --trigger-http --set-env-vars AGENT_ID=cost-attribution-prod,RUVECTOR_SERVICE_URL=https://ruvector.example.com,OBSERVATORY_URL=https://observatory.example.com"
  },
  "keywords": [
    "llm",
    "cost-ops",
    "cost-attribution",
    "edge-function",
    "google-cloud",
    "observability",
    "cli"
  ],
  "author": "Cost-Ops Team",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/functions-framework": "^3.4.0",
    "zod": "^3.22.4",
    "decimal.js": "^10.4.3",
    "commander": "^11.1.0",
    "cli-table3": "^0.6.3",
    "chalk": "^4.1.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.1"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "bin",
    "src",
    "package.json",
    "README.md"
  ]
}
