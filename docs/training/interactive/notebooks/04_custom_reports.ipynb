   "source": [
    "## 5. Custom Visualizations"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Create a comprehensive static report with multiple visualizations\n",
    "fig = plt.figure(figsize=(18, 12))\n",
    "gs = fig.add_gridspec(3, 3, hspace=0.3, wspace=0.3)\n",
    "\n",
    "# 1. Daily cost trend\n",
    "ax1 = fig.add_subplot(gs[0, :])\n",
    "daily_reset = daily_summary.reset_index()\n",
    "ax1.plot(daily_reset['date'], daily_reset['Total Cost'], marker='o', linewidth=2, color='steelblue')\n",
    "ax1.fill_between(daily_reset['date'], daily_reset['Total Cost'], alpha=0.3, color='steelblue')\n",
    "ax1.set_title('Daily Cost Trend', fontsize=14, fontweight='bold', pad=20)\n",
    "ax1.set_ylabel('Cost ($)', fontsize=11)\n",
    "ax1.grid(True, alpha=0.3)\n",
    "ax1.tick_params(axis='x', rotation=45)\n",
    "\n",
    "# 2. Model cost breakdown (pie chart)\n",
    "ax2 = fig.add_subplot(gs[1, 0])\n",
    "model_costs = model_summary['Total Cost'].sort_values(ascending=False)\n",
    "colors = plt.cm.Set3(np.linspace(0, 1, len(model_costs)))\n",
    "ax2.pie(model_costs.values, labels=model_costs.index, autopct='%1.1f%%', \n",
    "        colors=colors, startangle=90)\n",
    "ax2.set_title('Cost Distribution by Model', fontsize=12, fontweight='bold')\n",
    "\n",
    "# 3. Request count by model\n",
    "ax3 = fig.add_subplot(gs[1, 1])\n",
    "model_summary['Request Count'].sort_values(ascending=True).plot(\n",
    "    kind='barh', ax=ax3, color='coral'\n",
    ")\n",
    "ax3.set_title('Request Count by Model', fontsize=12, fontweight='bold')\n",
    "ax3.set_xlabel('Request Count')\n",
    "ax3.grid(True, alpha=0.3, axis='x')\n",
    "\n",
    "# 4. Token usage\n",
    "ax4 = fig.add_subplot(gs[1, 2])\n",
    "token_data = df.groupby('model')[['input_tokens', 'output_tokens']].sum()\n",
    "token_data.plot(kind='bar', ax=ax4, stacked=True, color=['skyblue', 'lightcoral'])\n",
    "ax4.set_title('Token Usage by Model', fontsize=12, fontweight='bold')\n",
    "ax4.set_ylabel('Total Tokens')\n",
    "ax4.tick_params(axis='x', rotation=45)\n",
    "ax4.legend(['Input', 'Output'])\n",
    "ax4.grid(True, alpha=0.3, axis='y')\n",
    "\n",
    "# 5. Cost heatmap by day of week and hour\n",
    "ax5 = fig.add_subplot(gs[2, :])\n",
    "df['day_of_week'] = df['timestamp'].dt.day_name()\n",
    "df['hour'] = df['timestamp'].dt.hour\n",
    "heatmap_data = df.pivot_table(\n",
    "    values='total_cost', \n",
    "    index='day_of_week', \n",
    "    columns='hour', \n",
    "    aggfunc='sum',\n",
    "    fill_value=0\n",
    ")\n",
    "# Reorder days\n",
    "day_order = ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday']\n",
    "heatmap_data = heatmap_data.reindex([d for d in day_order if d in heatmap_data.index])\n",
    "sns.heatmap(heatmap_data, cmap='YlOrRd', ax=ax5, cbar_kws={'label': 'Total Cost ($)'})\n",
    "ax5.set_title('Cost Heatmap (Day of Week vs Hour)', fontsize=12, fontweight='bold')\n",
    "ax5.set_xlabel('Hour of Day')\n",
    "ax5.set_ylabel('Day of Week')\n",
    "\n",
    "plt.suptitle('LLM Cost Analysis Report', fontsize=16, fontweight='bold', y=0.995)\n",
    "plt.savefig('cost_analysis_report.png', dpi=300, bbox_inches='tight')\n",
    "print(\"Report saved as 'cost_analysis_report.png'\")\n",
    "plt.show()"
   ]
