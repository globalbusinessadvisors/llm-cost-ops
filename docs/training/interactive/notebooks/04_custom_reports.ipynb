    "## 7. Automated Report Generation Function"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "def generate_cost_report(start_date, end_date, output_format='excel', output_dir='reports'):\n",
    "    \"\"\"\n",
    "    Generate a comprehensive cost report for the specified date range.\n",
    "    \n",
    "    Parameters:\n",
    "    - start_date: Start date for the report (datetime or string)\n",
    "    - end_date: End date for the report (datetime or string)\n",
    "    - output_format: 'excel', 'csv', or 'html'\n",
    "    - output_dir: Directory to save the report\n",
    "    \n",
    "    Returns:\n",
    "    - Path to the generated report\n",
    "    \"\"\"\n",
    "    import os\n",
    "    \n",
    "    # Ensure output directory exists\n",
    "    os.makedirs(output_dir, exist_ok=True)\n",
    "    \n",
    "    # Fetch data\n",
    "    params = {\n",
    "        'start_date': pd.to_datetime(start_date).isoformat(),\n",
    "        'end_date': pd.to_datetime(end_date).isoformat(),\n",
    "        'limit': 10000\n",
    "    }\n",
    "    \n",
    "    response = requests.get(f'{BASE_URL}/cost-tracking', headers=HEADERS, params=params)\n",
    "    cost_data = response.json()\n",
    "    \n",
    "    df = pd.DataFrame(cost_data['data'])\n",
    "    df['timestamp'] = pd.to_datetime(df['timestamp'])\n",
    "    df['total_tokens'] = df['input_tokens'] + df['output_tokens']\n",
    "    \n",
    "    # Generate summaries\n",
    "    daily_summary = df.groupby(df['timestamp'].dt.date).agg({\n",
    "        'total_cost': 'sum',\n",
    "        'request_id': 'count',\n",
    "        'total_tokens': 'sum'\n",
    "    })\n",
    "    \n",
    "    model_summary = df.groupby('model').agg({\n",
    "        'total_cost': 'sum',\n",
    "        'request_id': 'count'\n",
    "    })\n",
    "    \n",
    "    # Generate filename\n",
    "    timestamp = datetime.now().strftime('%Y%m%d_%H%M%S')\n",
    "    \n",
    "    if output_format == 'excel' and EXCEL_AVAILABLE:\n",
    "        filename = f'cost_report_{timestamp}.xlsx'\n",
    "        filepath = os.path.join(output_dir, filename)\n",
    "        \n",
