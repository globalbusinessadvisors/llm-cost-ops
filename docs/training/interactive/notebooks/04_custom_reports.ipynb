   "source": [
    "# Create a Python script for scheduled reporting\n",
    "script_content = '''\n",
    "#!/usr/bin/env python3\n",
    "\"\"\"\n",
    "Scheduled LLM Cost Report Generator\n",
    "\n",
    "Usage:\n",
    "  python scheduled_report.py --period weekly\n",
    "  python scheduled_report.py --period monthly\n",
    "  \n",
    "Set up with cron:\n",
    "  # Weekly report every Monday at 9 AM\n",
    "  0 9 * * 1 /usr/bin/python3 /path/to/scheduled_report.py --period weekly\n",
    "  \n",
    "  # Monthly report on the 1st at 9 AM\n",
    "  0 9 1 * * /usr/bin/python3 /path/to/scheduled_report.py --period monthly\n",
    "\"\"\"\n",
    "\n",
    "import argparse\n",
    "import pandas as pd\n",
    "import requests\n",
    "from datetime import datetime, timedelta\n",
    "import os\n",
    "\n",
    "BASE_URL = 'http://localhost:3000/api'\n",
    "API_KEY = os.environ.get('LLM_COST_OPS_API_KEY', 'your-api-key-here')\n",
    "HEADERS = {'Authorization': f'Bearer {API_KEY}', 'Content-Type': 'application/json'}\n",
    "\n",
    "def generate_report(period='weekly'):\n",
    "    end_date = datetime.now()\n",
    "    \n",
    "    if period == 'weekly':\n",
    "        start_date = end_date - timedelta(days=7)\n",
    "    elif period == 'monthly':\n",
    "        start_date = end_date - timedelta(days=30)\n",
    "    else:\n",
    "        start_date = end_date - timedelta(days=1)\n",
    "    \n",
    "    params = {\n",
    "        'start_date': start_date.isoformat(),\n",
    "        'end_date': end_date.isoformat(),\n",
    "        'limit': 10000\n",
    "    }\n",
    "    \n",
    "    response = requests.get(f'{BASE_URL}/cost-tracking', headers=HEADERS, params=params)\n",
    "    cost_data = response.json()\n",
    "    df = pd.DataFrame(cost_data['data'])\n",
    "    \n",
    "    # Generate report\n",
    "    output_dir = 'scheduled_reports'\n",
    "    os.makedirs(output_dir, exist_ok=True)\n",
    "    \n",
    "    timestamp = datetime.now().strftime('%Y%m%d')\n",
    "    filename = f'{period}_report_{timestamp}.xlsx'\n",
    "    filepath = os.path.join(output_dir, filename)\n",
    "    \n",
    "    with pd.ExcelWriter(filepath, engine='openpyxl') as writer:\n",
    "        df.to_excel(writer, sheet_name='Raw Data', index=False)\n",
    "    \n",
    "    print(f\"Report generated: {filepath}\")\n",
    "    return filepath\n",
    "\n",
    "if __name__ == '__main__':\n",
    "    parser = argparse.ArgumentParser(description='Generate LLM cost reports')\n",
    "    parser.add_argument('--period', choices=['daily', 'weekly', 'monthly'], \n",
    "                       default='weekly', help='Report period')\n",
    "    args = parser.parse_args()\n",
    "    \n",
    "    generate_report(args.period)\n",
    "'''\n",
    "\n",
    "# Save the script\n",
    "with open('scheduled_report.py', 'w') as f:\n",
    "    f.write(script_content)\n",
    "\n",
    "print(\"Scheduled reporting script created: 'scheduled_report.py'\")\n",
    "print(\"\\nTo use:\")\n",
    "print(\"1. Set environment variable: export LLM_COST_OPS_API_KEY='your-api-key'\")\n",
    "print(\"2. Run manually: python scheduled_report.py --period weekly\")\n",
    "print(\"3. Schedule with cron (see script comments for examples)\")"
   ]
