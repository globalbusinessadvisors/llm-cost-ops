    "            ]\n",
    "        })\n",
    "        summary_data.to_excel(writer, sheet_name='Summary', index=False)\n",
    "        \n",
    "        # Write daily summary\n",
    "        daily_summary.to_excel(writer, sheet_name='Daily Summary')\n",
    "        \n",
    "        # Write model summary\n",
    "        model_summary.to_excel(writer, sheet_name='Model Summary')\n",
    "        \n",
    "        # Write project summary if available\n",
    "        if project_summary is not None:\n",
    "            project_summary.to_excel(writer, sheet_name='Project Summary')\n",
    "        \n",
    "        # Write user summary if available\n",
    "        if user_summary is not None:\n",
    "            user_summary.head(20).to_excel(writer, sheet_name='Top Users')\n",
    "        \n",
    "        # Write raw data (limited to 10000 rows for performance)\n",
    "        df.head(10000).to_excel(writer, sheet_name='Raw Data', index=False)\n",
    "    \n",
    "    # Apply formatting\n",
    "    wb = openpyxl.load_workbook(output_file)\n",
    "    \n",
    "    # Format Summary sheet\n",
    "    ws = wb['Summary']\n",
    "    \n",
    "    # Header formatting\n",
    "    header_fill = PatternFill(start_color='366092', end_color='366092', fill_type='solid')\n",
    "    header_font = Font(color='FFFFFF', bold=True, size=12)\n",
    "    \n",
    "    for cell in ws[1]:\n",
    "        cell.fill = header_fill\n",
    "        cell.font = header_font\n",
    "        cell.alignment = Alignment(horizontal='center')\n",
    "    \n",
    "    # Auto-adjust column width\n",
    "    for column in ws.columns:\n",
    "        max_length = 0\n",
    "        column_letter = column[0].column_letter\n",
    "        for cell in column:\n",
    "            try:\n",
    "                if len(str(cell.value)) > max_length:\n",
    "                    max_length = len(str(cell.value))\n",
    "            except:\n",
    "                pass\n",
    "        adjusted_width = min(max_length + 2, 50)\n",
    "        ws.column_dimensions[column_letter].width = adjusted_width\n",
    "    \n",
    "    wb.save(output_file)\n",
    "    print(f\"Excel report saved as '{output_file}'\")\n",
    "    print(f\"Sheets: {wb.sheetnames}\")\n",
