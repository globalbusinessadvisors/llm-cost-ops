# Environment Variables for LLM Cost Ops
# Copy this file to .env and customize for your environment

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
RUST_LOG=info
RUST_BACKTRACE=1
LOG_LEVEL=info
PORT=8080
METRICS_PORT=9090

# Build information
BUILD_DATE=2024-01-01T00:00:00Z
VCS_REF=main

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme_postgres_password
POSTGRES_DB=llm_cost_ops
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=1GB
POSTGRES_MAINTENANCE_WORK_MEM=128MB
POSTGRES_WORK_MEM=8MB
POSTGRES_MAX_CONNECTIONS=100

# Replication (Production only)
POSTGRES_REPLICATION_USER=replicator
POSTGRES_REPLICATION_PASSWORD=changeme_replication_password

# Database connection pool
DATABASE_MAX_CONNECTIONS=20
DATABASE_MIN_CONNECTIONS=5
DATABASE_CONNECTION_TIMEOUT=30
DATABASE_IDLE_TIMEOUT=600

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_PASSWORD=changeme_redis_password
REDIS_POOL_SIZE=10
REDIS_TIMEOUT=5

# ============================================================================
# NATS CONFIGURATION
# ============================================================================
NATS_USER=admin
NATS_PASSWORD=changeme_nats_password

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
# JWT Secret (MUST be changed in production)
JWT_SECRET=changeme_jwt_secret_key_min_32_chars

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# TLS/SSL
TLS_ENABLED=false
TLS_CERT_PATH=/app/certs/server.crt
TLS_KEY_PATH=/app/certs/server.key

# ============================================================================
# MONITORING CONFIGURATION
# ============================================================================
# Grafana
GF_SERVER_ROOT_URL=http://localhost:3000
GF_SERVER_DOMAIN=localhost
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=changeme_grafana_password
GF_SECURITY_SECRET_KEY=changeme_grafana_secret
GF_SECURITY_DISABLE_GRAVATAR=true
GF_AUTH_ANONYMOUS_ENABLED=false
GF_ALERTING_ENABLED=true
GF_UNIFIED_ALERTING_ENABLED=true
GF_LOG_LEVEL=info

# Jaeger
JAEGER_LOG_LEVEL=info

# ============================================================================
# EMAIL CONFIGURATION (Production)
# ============================================================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=noreply@llm-cost-ops.com
SMTP_PASSWORD=changeme_smtp_password
SMTP_FROM=noreply@llm-cost-ops.com
SMTP_TLS=true

# ============================================================================
# BACKUP CONFIGURATION (Production)
# ============================================================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=llm-cost-ops-backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_COMPRESSION=true
ENABLE_RATE_LIMITING=true
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_EXPORT=true
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_QUERY_LOGGING=false
ENABLE_DETAILED_ERRORS=false

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_REQUESTS_PER_SECOND=100
RATE_LIMIT_BURST=200

# ============================================================================
# PGADMIN CONFIGURATION
# ============================================================================
PGADMIN_DEFAULT_EMAIL=admin@llm-cost-ops.local
PGADMIN_DEFAULT_PASSWORD=changeme_pgadmin_password

# ============================================================================
# REDIS COMMANDER CONFIGURATION
# ============================================================================
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=changeme_redis_commander_password

# ============================================================================
# TIMEZONE
# ============================================================================
TZ=UTC
